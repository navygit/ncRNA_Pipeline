## e.g., looking at a set of files...

for file in \
    Analysis/Config/Databases.pm \
    Analysis/Config/General.pm \
    Analysis/Config/Exonerate2Genes.pm \
    \
    Analysis/Config/GeneBuild/Databases.pm \
    Analysis/Config/GeneBuild/KillListFilter.pm \
    \
    Pipeline/Config/BatchQueue.pm \
    Pipeline/Config/General.pm \
    Pipeline/Config/GeneBuild/Databases.pm \
    Pipeline/Config/cDNA_ESTs/EST_GeneBuilder_Conf.pm \
    Pipeline/Config/cDNA_ESTs/Exonerate.pm; \
    do
    
    echo $file
    ll -ltr $(grep "$file\$" file.list) | tail -n 10
    echo
done;



